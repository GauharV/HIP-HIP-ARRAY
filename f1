Description: It finds integers and tells me which ones are even or odds
*/

import java.util.Scanner;

public class Arrayprogram {
    public static Scanner scanner = new Scanner(System.in);

    public static String getInput(String prompt) {
        System.out.print(prompt);
        return scanner.nextLine();
    }

    public static void getEven(int[] nums) {
        for (int num : nums) {
            if (num % 2 == 0) {
                System.out.print(num + " ");
            }
        }
        System.out.println(); 
    }

    public static void getOdd(int[] nums) {
        for (int num : nums) {
            if (num % 2 != 0) {
                System.out.print(num + " ");
            }
        }
        System.out.println();
    }

    public static void main(String[] args) {
        String askint = getInput("Enter 15 integers with one space between each integer: ");
        String[] list = askint.trim().split(" ");

        int[] intlist = new int[list.length];
        for (int i = 0; i < list.length; i++) {
            intlist[i] = Integer.parseInt(list[i]);
        }

        System.out.print("Even numbers: ");
        getEven(intlist);

        System.out.print("Odd numbers: ");
        getOdd(intlist);
    }
}
